---
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout title="404 - 页面不存在">
  <div class="soft-card p-8 md:p-12 text-center">
    <h1 class="text-4xl md:text-5xl font-bold" style="color: var(--text-primary);">404</h1>
    <p class="mt-4" style="color: var(--text-secondary);">页面不存在或已被移动。</p>
    <div class="mt-8 flex items-center justify-center gap-4">
      <a
        href=""
        class="soft-button inline-flex items-center px-6 py-3 rounded-xl font-medium"
        style="color: var(--text-primary);"
      >
        返回首页
      </a>
      <a
        href="chapters/"
        class="soft-button inline-flex items-center px-6 py-3 rounded-xl font-medium"
        style="color: var(--text-primary);"
      >
        章节列表
      </a>
    </div>
  </div>
</BaseLayout>

